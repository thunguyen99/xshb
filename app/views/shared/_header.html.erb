<div class="eyoktop">
    <!--登录条-->
    <div class="loginbar">
    <%if logged_in?%>
        <span style="margin-left:10px;">
            <strong>您好，<%=current_user.name%> | <a href="/my/orders"><%if current_user.has_role?("admin")%>管理中心<%else%>会员中心<%end%></a> | <a href="/logout">注销</a></strong>
        </span>
    <%else%>
        <% form_tag session_path,:name=>"login_form" do -%>
        <span>用户名／电子邮件：</span>
        <span><%= text_field_tag 'login', @login ,:class=>"input" %></span>
        <span>密码：</span>
        <span><%= password_field_tag 'password', nil ,:class=>"input" %></span>
        <span style="margin-left:10px;">
            <strong><a href="javascript:document.login_form.submit();">登录</a><a>|</a><a href="/signup">注册</a><a>|</a><a href="/forgot_password">忘记密码？</a></strong>
        </span>
        <div class="blank0"></div>
        <% end %>
    <%end%>
    </div>
<!--登录结束-->
